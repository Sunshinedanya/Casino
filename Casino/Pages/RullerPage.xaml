      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml" x:Class="Casino.Pages.RullerPage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RullerPage">

    <Grid Margin="10">
